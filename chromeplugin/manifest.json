{
    "background": {
       "scripts": [ "request.js" ]
    },
    "description": "Redirects any www.amazon.com/www.amazon.de page to smile.amazon.com/smile.amazon.de",
    "icons": { "16": "SA-16x16.png",
               "48": "SA-48x48.png",
               "128": "SA-128x128.png" },
    "manifest_version": 2,
    "name": "Smile Always - International",
    "permissions": [ "webRequest", "webRequestBlocking", "http://www.amazon.com/*", "https://www.amazon.com/*", "http://www.amazon.de/*", "https://www.amazon.de/*" ],
    "version": "0.93",
    "homepage_url": "http://www.smilealways.io",
    "author":"Josh Haimson, Dan Elitzer and Arne Schwabe"
}
